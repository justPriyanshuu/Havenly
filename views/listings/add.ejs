<% layout('/layouts/boilerplate') %>
<div class="row">
  <div class="col-8 offset-2">
    <div class="text-center">
      <h3>Create a Listing</h3>
    </div>
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          placeholder="Enter a catchy title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-2">
        <label for="description" class="form-label">Description</label>
        <input
          type="text"
          name="listing[description]"
          class="form-control"
          placeholder="Enter description"
          required
        />
        <div class="invalid-feedback">Description is invalid!</div>
      </div>
      <div class="mb-2">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>
      <div class="row">
        <div class="mb-2 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="Enter price"
            required
          />
          <div class="invalid-feedback">Price is invalid!</div>
        </div>
        <div class="mb-2 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="Enter country"
            required
          />
          <div class="invalid-feedback">Country is invalid!</div>
        </div>
      </div>
      <div class="mb-2">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          placeholder="Enter location"
          required
        />
        <div class="invalid-feedback">Location is invalid!</div>
      </div>
      <button class="btn btn-dark mb-2 add-btn" type="submit">Add</button>
    </form>
  </div>
</div>
