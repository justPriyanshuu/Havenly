<% layout('/layouts/boilerplate') %>
<body class="listings-page">
  <!-- <h1 class="listings-title">All Listings</h1> -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-5">
    <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top listing-card-img"
          alt="listing_image"
          style="height: 18rem"
        />
        <div class="card-body listing-card-body">
          <p class="card-text listing-card-text">
            <b><%= listing.title %></b>
            <br />
            &#x20b9;<%= listing.price.toLocaleString('en-IN') %>/night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
